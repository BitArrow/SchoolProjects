<Window x:Class="EksamAgarTudeng.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddSubjectWindow" Height="66" Width="472">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0">Aine nimetus</Label>
        <TextBox Grid.Column="1" x:Name="txbNewSubject"></TextBox>
        <Button Grid.Column="2" Click="Button_Click">Valmis</Button>
    </Grid>
</Window>
